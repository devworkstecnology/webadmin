<% unless flash.empty? %>
  <div class="row">
    <div class="col-lg-12">
      <% flash.each do |name, msg| %>
        <div data-alert class="alert <%= name.to_sym == :notice ? "alert-success" : "alert-danger" %>">
          <a class="close" data-dismiss="alert">&#215;</a>
          <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
