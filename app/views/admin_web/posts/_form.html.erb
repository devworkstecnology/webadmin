<div class="row">
  <div class="col-md-8">
    <div class="well bs-component">
      <%= simple_form_for @object, html: { class: "form-horizontal"} do |f| %>
        <fieldset>
          <%= f.input :title %>

          <%= f.input :abstract %>

          <%= f.input :image, class: "form-control" %>

          <%= f.input :body, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'} } %>

        </fieldset>

        <hr>
        <div class="form-actions">
          <%= f.submit 'Salvar', class: "btn btn-success" %>
          <%= link_to 'Apagar', @object, method: :delete, data: {confirm: 'Tem certeza que deseja remover esse registro?'}, class: 'btn btn-danger' if f.object.persisted? %>
          <%= link_to 'Cancelar', posts_path, class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
